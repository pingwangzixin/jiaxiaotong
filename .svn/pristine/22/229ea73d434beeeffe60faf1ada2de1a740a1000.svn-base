/* component/parent/workDetails/workDetails.wxss */
.detailsPage {
  height: 100%;
  background: #f5f5f5;
  overflow: auto;
	padding: 25rpx;
	box-sizing: border-box;
}

.workMain {
  height: 175rpx;
  background: #fff;
  border-radius: 10rpx;
  font-size: 22rpx;
}

.workTop {
  padding: 20rpx 38rpx 0 33rpx;
  height: 90rpx;
  position: relative;
}

.topLeft {
  width: 33rpx;
  height: 33rpx;
  background: #f7f6fa;
  border-radius: 50%;
  position: absolute;
  left: -15rpx;
  bottom: 9rpx;
}

.topRight {
  width: 33rpx;
  height: 33rpx;
  background: #f7f6fa;
  border-radius: 50%;
  position: absolute;
  right: -15rpx;
  bottom: 9rpx;
}

.workTitle {
  font-size: 27rpx;
  color: #333;
}

.subject {
  font-size: 23rpx;
  color: #959595;
  margin-top: 15rpx;
}

.workBottom {
  border-top: 1rpx solid #f7f6fa;
  height: 62rpx;
  line-height: 62rpx;
  color: #959595;
}

.workBottom view:nth-child(1) {
  margin-left: 36rpx;
  margin-right: 18rpx;
  width: 23rpx;
  height: 23rpx;
}

.workBottom view:nth-child(1) image {
  width: 23rpx;
  height: 23rpx;
}

.workTopRight {
  color: #fff;
  background: #7ad1f6;
  line-height: 37rpx;
  text-align: center;
  font-size: 23rpx;
  width: 96rpx;
  border-radius: 37rpx;
}


/* 测试 */
.radio{
	background: #fff;
	margin-top: 20rpx;
	padding: 20rpx 30rpx;
	border-radius: 20rpx;
}
.radioTitle{
	font-size: 26rpx;
	margin-bottom: 30rpx;
}
.question{
	margin-bottom: 40rpx;
	font-size: 20rpx;
}

.questionDec{
	line-height: 1;
	margin-bottom: 20rpx;
}
.option>view{
	line-height: 50rpx;
	text-indent: 35rpx;
}
.answer{
	border-top: 1rpx solid #ebebeb;
	padding-top: 18rpx;

}
.answerShow{
	width: 180rpx;
	height: 38rpx;
	display: flex;
	align-items: center;
	justify-content: right;
	float: right;
	color: #2e59f6;
}
.answerShow>view>image{
	width: 30rpx;
	height: 18rpx;
	margin-left: 10rpx;
}
.answer>view:nth-child(2){
	clear: both;
}
.answer>view:nth-child(2)>view:nth-child(1){
	margin-bottom: 27rpx;
}


/* 任务 */
.taskMain>view:nth-child(1){
	margin: 23rpx 0;
	line-height: 36rpx;
	font-size: 22rpx;
	background: #fff;
  border-radius: 20rpx;
	text-indent: 44rpx;
	padding: 25rpx 50rpx 40rpx 35rpx;
}
.taskMain>view:nth-child(2){
  border-radius: 20rpx;
	background: #fff;
	padding: 15rpx 50rpx 25rpx 30rpx;
}
.taskTitle{
	font-size: 26rpx;
	margin-bottom: 16rpx;
}
.taskTitle>text{
	font-size: 20rpx;
	color: #737373;
}
.taskImg{
	height: 50rxp;
	line-height: 50rpx;
	display: flex;
	align-items: center;
	margin: 9rpx 0;
}
.taskImg>image{
	width: 70rpx;
	height: 50rpx;
	margin-right: 25rpx;
}

.flexBox{display: flex;}
.flexOne{flex: 1;text-indent: 0;}