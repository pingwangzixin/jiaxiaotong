.notice{width: 100%;height: 100%;background: #f6f2f2;}
.swiperBox{height: 90%;box-sizing: border-box;padding: 20rpx 0;}
.leftHand,.rightHand{width: 30rpx;height: 100%;background: #fff;}
.leftHand{margin-right: 34rpx;border-top-right-radius: 20rpx;border-bottom-right-radius: 20rpx;}
.rightHand{border-top-left-radius: 20rpx;border-bottom-left-radius: 20rpx;}
.noticePage{
	width: 82%;
	height: 100%;
	box-sizing: border-box;
}
.noticeMain{
	height: 100%;
	background: #fff;
	border-radius: 20rpx; 
	box-sizing: border-box;
	padding: 30rpx  26rpx 25rpx;
}
.title{
	font-size: 27rpx;
	text-align: center;
	line-height: 50rpx;
	color: #555555;
}
.time{
	font-size: 17rpx;
	text-align: center;
	margin-bottom: 30rpx;
	color: #666666;
}
.content{
	font-size: 24rpx;
	color: #333333;
}
.mian{text-indent: 2em;}
.notice-footer{
	width: 100%;
	height: 110rpx;
	line-height: 110rpx;
	background-color: #fff;
	display: flex;
	position: fixed;
	bottom: 0;
	box-sizing: border-box;
}
.notice-footer view{flex: 1;text-align: center;font-size: 36rpx;color: #000;position: relative;}
.notice-footer .active{
	color: #0c22f1;
}
.notice-footer .active:after{
	border-left: 10px solid transparent;
	border-right: 10px solid transparent;
	border-top: 10px solid #0c22f1;
	content: "";
	position: absolute; 
  top: 0rpx;
  left: 165rpx;
	width: 0;
	height: 0;
}