.pageWrap{
	height: 100%;
	color: #fff;
	background: #373e51;
}
.analysisPage{
	padding: 0 34rpx 20rpx 23rpx;
	background: #373e51;

}


.pageTitle>view{
	text-align: center;
}
.pageTitle{
	border-bottom: 1rpx solid #485171;
	font-size: 30rpx;
	color: #70f6dd;
	line-height: 1;
	padding: 18rpx 0 14rpx;
}
.pageTitle>view:nth-of-type(2){
	margin-top: 15rpx;
	color: #fff;
	font-size: 20rpx;
}

.dataShow{
	background: #4d5673;
	margin-top: 10rpx;
	margin-bottom: 25rpx;
	border-radius: 10rpx;
	box-shadow: 0 0 10rpx 4rpx #2d3343;
}
.dataShow>view{
	display: flex;
	justify-content: space-between;
	line-height: 70rpx;
	font-size: 24rpx;
	padding: 0 25rpx ;
	border-bottom: 1rpx solid #697082; 
}
.dataShow>view:last-child{
	border: none;
}
.dataShow>view>text:nth-child(2){
	color: #70f6dd;
}


.echartsView>image{
	height: 400rpx;
}
.echartBtn{
	padding: 0 100rpx;
	display: flex;
	justify-content: space-between;
	font-size: 24rpx;
	color: #a4a4ae;
}
.activeBtn{
	color: #70f6dd;
	border-bottom: 4rpx solid #70f6dd;
	width: 135rpx;
	white-space:nowrap;
	text-indent: -5rpx; 
}





.researchTable{
	display: flex;
	text-align: center;
	margin-top: 22rpx;
}
.researchTable .tableLeftOneTop {
	width: 150rpx;
  height: 63rpx;
  color: #7ee1d6;
  font-size: 17rpx;
  background: #4d5673;
  background-image: linear-gradient(22deg, transparent 49.5%, #697082 49.5%, #697082 50.5%, transparent 50.5%);

}

.researchTable .tableLeftOneTop>view:nth-child(1) {
  text-align: right;
	padding: 6rpx 13rpx 0 0;
}

.researchTable .tableLeftOneTop>view:nth-child(2) {
  text-align: left;
	line-height: 20rpx;
	padding-left: 6rpx;
}
.researchTable .tableLeftOneBtm{
	height: 74rpx;
	line-height: 74rpx;
	width: 150rpx;
  background: #4d5673;
  font-size: 25rpx;
  color: #7ee1d6;
  border-top: 1rpx solid #697082;


}
.researchTable .tableMain>view{
  font-size: 20rpx;
  color: #fff;
  background: #57607f;
	border-left: 1rpx solid #697082;
  border-top: 1rpx solid #697082;
	width: 108rpx;
		height: 74rpx;
	line-height: 74rpx;
}
.researchTable .tableMain>view:nth-child(1){
  font-size: 23rpx;
	line-height: 63rpx;
  color: #7ee1d6;
  height: 63rpx;
  background: #4d5673;
	border-left: 1rpx solid #697082;
	border-top: none;
	width: 108rpx;
}



.ChartView{
	height: 440rpx;
}